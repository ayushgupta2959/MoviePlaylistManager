<div class="ui main container">
  <h2>Enter New Movie Details</h2>
  <form class="ui form segment" action="/movies" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="movie[title]" />
    </div>
    <div class="field">
      <label>Year</label>
      <input type="text" name="movie[year]" />
    </div>
    <div class="content">
      <input class="ui button" type="submit" />
    </div>
  </form>
</div>
